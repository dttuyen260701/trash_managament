<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_inf_logined2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_Information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_Inf_Fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_themes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1" />

                <TextView
                    android:id="@+id/txt_Tittle_Inf_Fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_inf_logined2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/border_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_weight="13">

        <TextView
            android:id="@+id/txtInf_Frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/border_color"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:text="Information"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_specifi_Inf_Frag"
            app:layout_constraintDimensionRatio="h,14:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/btn_specifi_Inf_Frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/custom_button_inf_frag"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:text="Specifications"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/btn_HTSU_Inf_Frag"
            app:layout_constraintDimensionRatio="h,12:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInf_Frag"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_HTSU_Inf_Frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/custom_button_inf_frag"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:text="How to set up your machine"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/btn_AboutUs_Inf_Frag"
            app:layout_constraintDimensionRatio="h,12:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_specifi_Inf_Frag"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_AboutUs_Inf_Frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/custom_button_inf_frag"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:text="About Us"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/btn_TermofU_Inf_Frag"
            app:layout_constraintDimensionRatio="h,12:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_HTSU_Inf_Frag"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_TermofU_Inf_Frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/custom_button_inf_frag"
            android:gravity="center|start"
            android:paddingStart="7dp"
            android:text="Terms of use and privacy policy"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,12:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_AboutUs_Inf_Frag"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>